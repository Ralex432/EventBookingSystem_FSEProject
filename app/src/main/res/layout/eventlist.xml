<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evlist_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/eventlist_custom1"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    android:paddingVertical="3dp">

    <LinearLayout
        android:id="@+id/evlist_EventInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/evlist_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginVertical="3dp"
            android:layout_marginStart="4dp"
            android:background="#FFFFFF"
            android:clickable="false"
            android:scaleType="center" />

        <LinearLayout
            android:id="@+id/TextLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:backgroundTint="@color/colorText"
            android:orientation="vertical">

            <TextView
                android:id="@+id/evlist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:text="Titlu eveniment"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/evlist_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:text="Titlu eveniment"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/DataOraLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/evlist_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:text="Data Evenimentului"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/evlist_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/lato"
                    android:gravity="center_horizontal"
                    android:text="Ora Evenimentului"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/evlist_description"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                android:fontFamily="@font/lato_thin"
                android:gravity="center_horizontal"
                android:text="Descriere eveniment"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/evlist_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:text="Locatie"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/evlist_seats_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:text="Bilete disponibile"
                android:textAlignment="center"
                android:textColor="@color/colorMediumGreen"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>