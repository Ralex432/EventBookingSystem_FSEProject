<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.add_event.AddEventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"

        android:focusable="true"

        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitluEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Titlu Eveniment"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTitluEv"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_custom"
            android:backgroundTintMode="add"
            android:ems="10"
            android:focusedByDefault="false"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:hint="AdaugÄƒ titlul evenimentului"
            android:inputType="textCapSentences"
            android:paddingHorizontal="5dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textDomeniuEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Domeniu"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerDomeniuEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textDescriereEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Descriere"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editDescriereEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_custom"
            android:backgroundTintMode="add"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Descriere eveniment"
            android:inputType="textCapSentences|textMultiLine"
            android:paddingHorizontal="5dp"
            android:paddingVertical="4dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textLocatieEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Locatie"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editLocatieEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_custom"
            android:backgroundTintMode="add"
            android:ems="10"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Locatie eveniment"
            android:inputType="textCapSentences|textMultiLine"
            android:paddingHorizontal="5dp"
            android:paddingVertical="4dp"
            android:textColor="@color/colorAccent"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textDataEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Data"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/DataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editDataEv"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/text_custom"
                android:backgroundTintMode="add"
                android:editable="false"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Data aleasa"
                android:inputType="none"
                android:paddingHorizontal="5dp"
                android:paddingVertical="4dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/darker_gray"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonPickDateEv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="false"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:text="Alege Data"
                android:textAlignment="gravity"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTimeEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Ora"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/TimeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTimeEv"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/text_custom"
                android:backgroundTintMode="add"
                android:editable="false"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Ora aleasa"
                android:inputType="none"
                android:paddingHorizontal="5dp"
                android:paddingVertical="4dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/darker_gray"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonPickTimeEv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="false"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:text="Alege Ora"
                android:textAlignment="gravity"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textCategoriiEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Categorii pret"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/PriceRangeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editPriceRangeEv"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/text_custom"
                android:backgroundTintMode="add"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Nr categorii"
                android:inputType="none"
                android:paddingHorizontal="5dp"
                android:paddingVertical="4dp"
                android:textColor="@color/colorAccent"
                android:textColorHint="@android:color/darker_gray"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonPriceRangeEv"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_centerVertical="false"
                android:layout_weight="1"
                android:background="@drawable/button_custom1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:text="Selecteaza"
                android:textAlignment="gravity"
                android:textColor="@color/colorBackground"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/InstancePriceRangeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/textFotografiiReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_horizontal"
            android:text="Fotografii"
            android:textSize="16sp" />

        <HorizontalScrollView
            android:id="@+id/FotografiiScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/FotografiiLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/buttonAddPhotosEv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />

        <Button
            android:id="@+id/buttonAddEvent"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/button_custom1"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:text="Adauga Eveniment"
            android:textAlignment="gravity"
            android:textColor="@color/colorBackground"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>