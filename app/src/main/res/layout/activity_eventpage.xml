<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center_horizontal|fill_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:text="Nume Eveniment"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

        <ImageView
            android:id="@+id/image_event_poster"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/text_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Data Event"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:text="O super descriere"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_cumpara_bilet"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/buttonLogin"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom3"
                android:backgroundTint="@color/colorAccent"
                android:clickable="false"
                android:fontFamily="@font/lato"
                android:includeFontPadding="false"
                android:text="Cumpara Bilet"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

