<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center_horizontal|fill_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_titlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="51dp"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:text="Nume Eveniment"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_below="@+id/text_titlu"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@color/colorAccent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="Data Event"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/lato"
                android:gravity="center_horizontal"
                android:text="O super descriere"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonRegister3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/buttonLogin"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_custom3"
                android:backgroundTint="@color/colorAccent"
                android:clickable="false"
                android:fontFamily="@font/lato"
                android:includeFontPadding="false"
                android:text="Cumpara Bilet"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

